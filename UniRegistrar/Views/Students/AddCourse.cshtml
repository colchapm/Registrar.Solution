@{
  Layout = "_Layout";
}

@model UniRegistrar.Models.Student

<h2>Add a course to this student: @Html.DisplayFor(model => model.StudentName)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StudentId)

  @Html.Label("Select course")
  @Html.DropDownList("CourseId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Student Details", "Details", new { id = Model.StudentId })</p>