@{
  Layout = "_Layout";
}

@model UniRegistrar.Models.Department

<h4>Add a new department</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.DepartmentName)
  @Html.TextBoxFor(model => model.DepartmentName, new { @class = "form-control", required = "required"})

  <input type="submit" value="Add a new department" />
}

<ul class="menu-links">
  <li>@Html.ActionLink("See Department Directory", "Index")</li>
</ul>