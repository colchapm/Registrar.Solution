@{
  Layout = "_Layout";
}

@using UniRegistrar.Models
@model List<UniRegistrar.Models.Department>

<h1>Departments</h1>

@if (@Model.Count == 0)
{
  <h3>We have no departments yet.</h3>
}

<ul>
  @foreach(Department department in Model)
  {
    <li>@Html.ActionLink($"{department.DepartmentName}", "Details", new { id = department.DepartmentId })</li>
  }
</ul>

<ul class="menu-links">
  <li>@Html.ActionLink("Add a new department", "Create")</li>
  <li>@Html.ActionLink("Back to home", "Index", "Home")</li>
</ul>
