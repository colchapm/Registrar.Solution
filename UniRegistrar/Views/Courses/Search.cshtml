@{
  Layout = "_Layout";
}

@using UniRegistrar.Models
@model List<UniRegistrar.Models.Course>;

<h2>Search for courses</h2>

@using (@Html.BeginForm("Search","Courses",FormMethod.Get))
{
  @Html.TextBox("search")
  <input type="submit" value="search" />
}

@if (Model.Count == 0)
{
  <p>No courses match your search query</p>
}
<ul>
@foreach (Course course in Model)
{
  <li>@Html.ActionLink($"{course.CourseNumber} {course.CourseName}","Details", new { id = course.CourseId })</li>
}
</ul>